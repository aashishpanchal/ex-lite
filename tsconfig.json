{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "lib": ["esnext"],
    "removeComments": false,
    "composite": false,
    "declaration": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "inlineSources": false,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "build"
  },
  "include": ["src/**/*.ts"]
}
